{
  "name": "nodemailer-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "build": "tsc",
    "serve": "node dist/server.js",
    "test:email": "ts-node src/send-test-email.ts"
